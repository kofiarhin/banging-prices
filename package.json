{
  "name": "banging-prices",
  "version": "1.0.0",
  "private": true,
  "main": "server/server.js",
  "engines": {
    "node": "20.x",
    "npm": "10.x"
  },
  "scripts": {
    "start": "node server/server.js",
    "server": "nodemon server/server.js",
    "price-alert": "node boohooAlert.js",
    "scrapers": "node server/crawlers/storeCrawlers.js",
    "scrapers:all": "node server/crawlers/storeCrawlers.js",
    "scrapers:nike": "cross-env ONLY_CRAWLER=nike node server/crawlers/storeCrawlers.js",
    "scrapers:asos": "cross-env ONLY_CRAWLER=asos node server/crawlers/storeCrawlers.js",
    "scrapers:boohoo": "cross-env ONLY_CRAWLER=boohoo node server/crawlers/storeCrawlers.js",
    "scrapers:run": "playwright install chromium && node server/crawlers/storeCrawlers.js",
    "scrapers:nike:run": "playwright install chromium && cross-env ONLY_CRAWLER=nike node server/crawlers/storeCrawlers.js",
    "scrapers:asos:run": "playwright install chromium && cross-env ONLY_CRAWLER=asos node server/crawlers/storeCrawlers.js",
    "scrapers:boohoo:run": "playwright install chromium && cross-env ONLY_CRAWLER=boohoo node server/crawlers/storeCrawlers.js",
    "client": "npm run dev --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "deploy": "git pull --rebase origin main && git pull --rebase heroku main && git push origin main && git push heroku main"
  },
  "dependencies": {
    "@clerk/express": "^1.7.63",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "crawlee": "^3.15.3",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "mongoose": "^9.1.2",
    "nodemailer": "^7.0.12",
    "playwright": "^1.58.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.9"
  }
}
